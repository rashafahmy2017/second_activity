<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#e06666"
    tools:context=".MainActivity"
  >
    <LinearLayout
        android:id="@+id/header"
        android:weightSum="100"
        android:paddingBottom="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:src="@drawable/close_red"/>
        <TextView
            android:layout_weight="80"
            android:textColor="@android:color/white"
            android:id="@+id/name"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rasha"/>
    </LinearLayout>
    <View
        android:id="@+id/line_1"
        android:layout_width="match_parent"
        android:layout_below="@id/header"
        android:layout_height="0.5dp"
        android:background="#eca3a3">
    </View>
    <LinearLayout
        android:id="@+id/cancel_ticket"
        android:layout_below="@id/line_1"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100">
        <TextView
            android:id="@+id/ticket_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xxx-xxx-xxx-xxx"
            android:layout_weight="75"
            android:textSize="18sp"
            android:textColor="#dcd2d2"
            />
        <TextView
            android:id="@+id/cancel"
            android:layout_weight="25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel Tickeet"
            android:textSize="18sp"
            android:textColor="#dcd2d2"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            />
    </LinearLayout>
    <View
        android:id="@+id/line_2"
        android:layout_width="match_parent"
        android:layout_below="@id/cancel_ticket"
        android:layout_height="0.5dp"
        android:background="#eca3a3">
    </View>
    <LinearLayout
        android:id="@+id/phone_data"
        android:layout_below="@id/line_2"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/mobile_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile NO."
            android:textSize="18sp"
            android:textColor="#dcd2d2"
            />
        <TextView
            android:id="@+id/mobile_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="+966 56 716 1718"
            android:textColor="#eac1c1" />
    </LinearLayout>
    <View
        android:id="@+id/line_3"
        android:layout_width="match_parent"
        android:layout_below="@id/phone_data"
        android:layout_height="0.5dp"
        android:background="#eca3a3">
    </View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/email_data"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_below="@id/line_3">
        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email."
            android:textColor="#dcd2d2"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/email_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#eac1c1"
            android:text="eman@eman.eman"
            android:layout_marginBottom="10dp"
            />
    </LinearLayout>
    <View
        android:id="@+id/line_4"
        android:layout_width="match_parent"
        android:layout_below="@id/email_data"
        android:layout_height="0.5dp"
        android:background="#eca3a3">
    </View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/paid_data"
        android:layout_below="@id/line_4"
        android:paddingTop="10dp"
        android:orientation="horizontal"
        android:weightSum="100">
        <TextView
            android:id="@+id/paid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not Paid"
            android:layout_weight="80"
            android:textColor="#dcd2d2"
            android:textSize="20sp"
            android:paddingBottom="10dp"/>

        <TextView
            android:id="@+id/sar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SAR "
            android:textColor="#dcd2d2"
            android:textSize="20sp"
            android:paddingBottom="10dp"/>
        <TextView
            android:id="@+id/sar_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="75"
            android:textColor="#dcd2d2"
            android:textSize="20sp"
            android:paddingBottom="10dp"/>
    </LinearLayout>
    <View
        android:id="@+id/line_5"
        android:layout_width="match_parent"
        android:layout_below="@id/paid_data"
        android:layout_height="0.5dp"
        android:background="#eca3a3">
    </View>
    <LinearLayout
        android:id="@+id/scan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_below="@id/line_5"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="95"
            android:orientation="vertical">
            <TextView
                android:id="@+id/qr_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scan QR-Code"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"
                android:textColor="#dcd2d2"/>
            <TextView
                android:id="@+id/use_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="use your came to confirm tickets"
                android:textColor="#dcd2d2"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>
        <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/fi"/>
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_below="@id/scan"
    android:weightSum="100">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="95"
        android:orientation="vertical">
        <TextView
            android:id="@+id/cofirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm by Tickets NO."
            android:textSize="18sp"
            android:layout_marginBottom="10dp"
            android:textColor="#dcd2d2"/>

        <TextView
            android:id="@+id/cofirm2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="use your came to confirm tickets"
            android:textColor="#dcd2d2"/>
    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/se"/>
</LinearLayout>






</RelativeLayout>
